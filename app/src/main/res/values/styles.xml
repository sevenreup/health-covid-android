<resources>
    <style name="AppTheme.SplashScreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Widget.App.Button.Normal.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="Widget.Covid.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    </style>

    <style name="BottomSheetDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>
</resources>
