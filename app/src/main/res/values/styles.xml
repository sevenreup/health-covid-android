<resources>
    <style name="AppTheme.SplashScreenTheme">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>
    <style name="Widget.App.Button.Normal.IconOnly" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="AppTheme.Slide">
        <item name="android:windowEnterAnimation">@anim/slide_up</item>
        <item name="android:windowExitAnimation">@anim/slide_down</item>
    </style>


    <style name="Widget.Covid.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
    </style>

    <style name="Widget.Covid.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
    <style name="Covid.TabLayout" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Covid.Search" parent="@android:style/TextAppearance">
        <item name="android:textSize">18sp</item>
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:hint">@string/search_hint</item>
        <item name="android:textColorHint">#D2D9E5</item>
    </style>
    <style name="Widget.Covid.Button.White" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@android:color/white</item>
        <item name="android:textColor">?colorPrimary</item>
    </style>
</resources>
