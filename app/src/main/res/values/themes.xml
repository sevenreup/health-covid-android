<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Covid.DayNight" parent="Theme.Covid"/>
    <style name="Theme.Covid.Toolbar" parent="Theme.Covid">
        <item name="windowActionBar">true</item>
        <item name="windowNoTitle">false</item>
        <item name="toolbarStyle">@style/Covid.ToolbarStyle</item>

    </style>

    <style name="Theme.Covid" parent="Base.ThemeBuilder">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryVariant">@color/color_primary_variant</item>
        <item name="colorSecondary">@color/color_secondary</item>
        <item name="colorSecondaryVariant">@color/color_secondary_variant</item>

        <item name="android:colorBackground">@color/color_background</item>
        <item name="colorSurface">@color/color_surface</item>
        <item name="colorError">@color/color_error</item>

        <item name="colorOnPrimary">@color/color_surface</item>
        <item name="colorOnSecondary">@color/color_on_secondary</item>
        <item name="colorOnBackground">@color/color_on_secondary</item>
        <item name="colorOnSurface">@color/color_on_secondary</item>
        <item name="colorOnError">@color/color_on_secondary</item>

        <item name="badgeTextColor">@color/badge_text_color</item>

        <item name="android:statusBarColor">@color/color_status_bar</item>

        <!--Typography-->
        <item name="textAppearanceHeadline2">@style/TextAppearance.Covid.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.Covid.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.Covid.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.Covid.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.Covid.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.Covid.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.Covid.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.Covid.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.Covid.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.Covid.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.Covid.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.Covid.Overline</item>


    </style>

    <style name="Base.ThemeBuilder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:statusBarColor">?colorSurface</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="fontFamily">@font/work_sans_semibold</item>
        <item name="android:forceDarkAllowed">false</item>

        <item name="android:windowLightNavigationBar" tools:ignore="NewApi">true</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">?colorControlHighlight</item>

        <item name="android:fontFamily">@font/work_sans_semibold</item>
        <item name="android:navigationBarColor">?android:colorBackground</item>

        <!--Remap legacy AppCompat attributes to MaterialComponent attributes-->
        <item name="colorPrimaryDark">?colorPrimaryVariant</item>
        <item name="colorAccent">?colorSecondary</item>

        <!-- Shapes -->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.Covid.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.Covid.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.Covid.LargeComponent</item>

        <item name="textInputStyle">@style/Widget.Covid.TextInputLayout</item>
    </style>
    <style name="Covid.ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.PrimarySurface"/>
</resources>