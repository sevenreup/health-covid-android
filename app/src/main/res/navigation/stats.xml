<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/stats"
    app:startDestination="@id/statsFragment">
    <action
        android:id="@+id/to_countryStatsFragment"
        app:destination="@id/statsBarChatFragment" />
    <action
        android:id="@+id/to_countriesFragment"
        app:destination="@id/countriesFragment" />

    <fragment
        android:id="@+id/statsFragment"
        android:name="com.skybox.seven.covid.ui.stats.StatisticsFragment"
        android:label="fragment_stats"
        tools:layout="@layout/fragment_stats" />
    <fragment
        android:id="@+id/statsBarChatFragment"
        android:name="com.skybox.seven.covid.ui.stats.country.CountryStatsChatFragment"
        android:label="fragment_stats_bar_chat"
        tools:layout="@layout/fragment_stats_bar_chat" >
        <argument
            android:name="country"
            app:argType="com.skybox.seven.covid.model.CountryStat" />
    </fragment>
    <fragment
        android:id="@+id/countriesFragment"
        android:name="com.skybox.seven.covid.ui.stats.countriesStats.CountriesFragment"
        android:label="fragment_countries"
        tools:layout="@layout/fragment_countries" />
</navigation>