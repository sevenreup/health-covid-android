<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SelfTestActivity">



    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="10dp"
        app:cardBackgroundColor="#00BCD4"
        app:cardCornerRadius="15dp"
        app:cardElevation="3dp">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/scrollview"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical" >
                <Button
                    android:id="@+id/date"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Choose todays date"
                    android:textAlignment="center"
                    android:background="@drawable/bg"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing shortness of breath?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing sore throat?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing fever?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing dry cough?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="4dp"
                    android:buttonTint="#fff"
                    android:text="Experiencing aches and pains?"
                    android:textColor="#fff"
                    android:textSize="16sp" />

                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing nasal congestion, runny nose?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />
                <CheckBox
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp"
                    android:text="Experiencing diarrhea?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:buttonTint="#fff"
                    />
                <LinearLayout
                    android:layout_height="50dp"
                    android:layout_width="match_parent"
                    android:layout_marginStart="4dp"
                    >
                    <TextView
                        android:layout_marginTop="23dp"
                        android:layout_height="match_parent"
                        android:layout_width="wrap_content"
                        android:text="Choose degree:"
                        android:textColor="#fff"
                        android:textAlignment="center"
                        android:layout_marginStart="4dp"/>
                    <com.skydoves.powerspinner.PowerSpinnerView
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginStart="4dp"
                        android:layout_marginEnd="4dp"
                        android:id="@+id/mySpinnerView"
                        android:background="@drawable/bg"
                        android:gravity="center"
                        android:hint="Degree of severity"
                        android:padding="10dp"
                        android:textColor="#001"
                        android:textColorHint="#fef"
                        android:textSize="14.5sp"
                        app:spinner_arrow_gravity="end"
                        app:spinner_arrow_padding="8dp"
                        app:spinner_divider_color="#fef"
                        app:spinner_divider_show="true"
                        app:spinner_divider_size="0.4dp"
                        app:spinner_arrow_animate="true"
                        app:spinner_arrow_show="true"
                        app:spinner_item_array="@array/suggestions"
                        app:spinner_popup_animation="dropdown"
                        app:spinner_popup_background="#00838F"
                        app:spinner_popup_elevation="14dp" />

                </LinearLayout>
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="80dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    >
                <com.ncorti.slidetoact.SlideToActView
                    android:id="@+id/submission"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginTop="10dp"
                    android:layout_gravity="center"
                    android:elevation="3dp"
                    app:animation_duration="250"
                    app:outer_color="#373C3C"
                    app:inner_color="#005B67"
                    app:border_radius="35dp"
                    app:text="Slide to verify"
                    app:text_size="16sp"
                    app:text_color="#fff"
                    app:text_style="bold"
                    app:slider_height="70dp"
                    app:slider_locked="false"
                    />

                    <ProgressBar
                        android:id="@+id/progress"
                        style="@android:style/Widget.DeviceDefault.Light.ProgressBar.Large"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="25dp"

                        />
                </RelativeLayout>
                <TextView
                    android:layout_marginTop="23dp"
                    android:layout_height="match_parent"
                    android:layout_width="wrap_content"
                    android:text="Couldn't find what you are looking for?"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"
                    android:layout_marginStart="4dp"/>
            </LinearLayout>

        </ScrollView>


    </androidx.cardview.widget.CardView>


</FrameLayout>