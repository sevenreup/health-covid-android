<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <data>
        <variable
            name="clickHandler"
            type="com.skybox.seven.covid.ui.home.HomePageFragment.ClickHandlers" />
        
    </data>
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">


<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomePageFragment">

    <TextView
        android:layout_margin="@dimen/menu_card_margin"
        android:id="@+id/greetingView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/greeting"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:cardCornerRadius="@dimen/menu_card_radius"
        app:layout_constraintBottom_toTopOf="@id/preventionCard"
        app:layout_constraintTop_toBottomOf="@+id/greetingView"
        tools:layout_editor_absoluteX="1dp"
        android:layout_margin="@dimen/menu_card_margin"
        android:id="@+id/detailsCard"
        app:cardBackgroundColor="@color/background_purple">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/detailImage"
                android:layout_width="90dp"
                android:layout_height="100dp"
                android:layout_marginTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/cough" />

            <TextView
                android:id="@+id/detailText"
                android:layout_width="250sp"
                android:layout_marginTop="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:text="@string/details_card_statement"
                app:layout_constraintLeft_toRightOf="@+id/detailImage"
                app:layout_constraintTop_toTopOf="parent" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/detailsButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="36dp"
                android:layout_marginTop="8dp"
                android:drawableLeft="@drawable/ic_phonee"
                android:text="Details"
                app:layout_constraintLeft_toRightOf="@id/detailImage"
                app:layout_constraintTop_toBottomOf="@id/detailText" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/symptomsLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/menu_card_margin"
        app:layout_constraintTop_toBottomOf="@+id/detailsCard">

    <androidx.cardview.widget.CardView
        android:id="@+id/preventionCard"
        android:onClick="@{clickHandler::onCardClick}"
        android:layout_width="157.5dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/symptomsLayout"
        android:layout_margin="@dimen/menu_card_margin"
        app:cardCornerRadius="@dimen/menu_card_radius"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="669dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:paddingLeft="@dimen/menu_card_margin"
                android:id="@+id/preventionImage"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/mask" />

            <TextView
                android:id="@+id/preventionTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                android:text="@string/prevention"
                app:layout_constraintLeft_toRightOf="@+id/preventionImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/preventionThumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/virus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/symptomsCard"
        android:onClick="@{clickHandler::onCardClick}"
        android:layout_width="157.5dp"
        app:layout_constraintLeft_toRightOf="@id/preventionCard"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/menu_card_margin"
        app:cardCornerRadius="@dimen/menu_card_radius"
        app:layout_constraintTop_toTopOf="@+id/symptomsLayout"        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="572dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/symptomImage"
                android:paddingLeft="@dimen/menu_card_margin"
                android:layout_width="70dp"
                android:layout_height="80dp"
                app:srcCompat="@drawable/mask" />

            <TextView
                android:id="@+id/symptomTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="13dp"
                android:text="@string/symptom"
                app:layout_constraintLeft_toRightOf="@+id/symptomImage"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/symptomThumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/virus" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/mythCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:onClick="@{clickHandler::onCardClick}"
        android:layout_margin="@dimen/menu_card_margin"
        app:cardCornerRadius="@dimen/menu_card_radius"
        tools:layout_editor_absoluteX="1dp"
        app:layout_constraintTop_toBottomOf="@+id/symptomsLayout"
        tools:layout_editor_absoluteY="656dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/mythImage"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mask" />

            <TextView
                android:id="@+id/mythTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                android:text="@string/title_mythbusters"
                app:layout_constraintLeft_toRightOf="@+id/mythImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/mythMoreTV"
                android:textColor="@color/lime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/more"
                app:layout_constraintLeft_toRightOf="@+id/mythImage"
                app:layout_constraintTop_toBottomOf="@+id/mythTitle" />

            <ImageView
                android:id="@+id/mythThumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="12dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/virus" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/qnaCard"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="@dimen/menu_card_margin"
        app:layout_constraintTop_toBottomOf="@+id/mythCard"
        app:cardCornerRadius="@dimen/menu_card_radius"
        tools:layout_editor_absoluteX="1dp"
        tools:layout_editor_absoluteY="690dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/qnaImage"
                android:layout_width="50dp"
                android:layout_height="60dp"
                android:layout_margin="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/mask" />

            <TextView
                android:id="@+id/qnaTitle"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:text="@string/title_qna"
                app:layout_constraintLeft_toRightOf="@+id/qnaImage"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/qnaMoreTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="18dp"
                android:text="@string/more"
                android:textColor="@color/lime"
                app:layout_constraintLeft_toRightOf="@+id/qnaImage"
                app:layout_constraintTop_toBottomOf="@+id/qnaTitle" />

            <ImageView
                android:id="@+id/qnaThumb"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:srcCompat="@drawable/virus" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
</layout>