<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <variable name="question" type="com.skybox.seven.covid.model.Question"/>
        <variable name="onHeaderExpanded" type="android.view.View.OnClickListener"/>
    </data>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="6dp"
        android:layout_marginEnd="6dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="@dimen/menu_card_radius"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{question.name}"
                android:layout_margin="20dp"
                android:id="@+id/qnaQuestion"
                android:textSize="17sp"
                />

            <ImageView
                android:id="@+id/qnaArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_margin="10dp"
                android:src="@drawable/ic_keyboard_arrow"/>

        </RelativeLayout>

    </LinearLayout>
    </com.google.android.material.card.MaterialCardView>
</layout>