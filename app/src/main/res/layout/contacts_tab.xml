<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/addContButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/button_add_contact"
        android:layout_centerHorizontal="true"/>

 <com.google.android.material.tabs.TabLayout
    android:layout_below="@+id/addContButton"
     android:id="@+id/contactTab"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
     app:tabSelectedTextColor="@color/colorAccent"
     app:tabTextColor="@color/primary_dark">

     <com.google.android.material.tabs.TabItem
         android:id="@+id/allContacts"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Contacts"/>
     <com.google.android.material.tabs.TabItem
         android:id="@+id/requests"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:text="Contact Requests"/>
 </com.google.android.material.tabs.TabLayout>
    
    <androidx.viewpager.widget.ViewPager
        android:layout_below="@+id/contactTab"
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </androidx.viewpager.widget.ViewPager>

</RelativeLayout>