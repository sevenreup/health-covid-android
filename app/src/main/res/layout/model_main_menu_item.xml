<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/menu_card_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    app:cardCornerRadius="10dp"
    android:elevation="8dp"
    android:clickable="true"
    android:focusable="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal|center_vertical"
        android:layout_margin="@dimen/menu_card_margin"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView android:id="@+id/model_image"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/menu_card_image_height"
            android:layout_marginBottom="@dimen/menu_card_image_mBottom"
            android:src="@drawable/ic_user" />

        <TextView android:id="@+id/model_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/title_health_tips"
            android:textAlignment="center"
            android:textSize="15sp" />

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>